<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/overlay_dark_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_ulasan_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_left"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ulasan Buku"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black_promo" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgv_ulasan"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_book_sampel" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_large"/>

                <TextView
                    android:id="@+id/tv_ulasan_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:textColor="@color/black_promo"
                    android:paddingHorizontal="@dimen/spacing_xlarge"
                    android:text="Harry Potter and the sorcener's stone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small"/>

                <TextView
                    android:id="@+id/tv_ulasan_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/spacing_xlarge"
                    android:text="J.K Rowling"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small"/>

                <TextView
                    android:id="@+id/tv_ulasan_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_star"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:paddingHorizontal="@dimen/spacing_xlarge"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:text="4.5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_large"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black_promo" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textSize="20sp"
                    android:textColor="@color/black_promo" />

                <RatingBar
                    android:id="@+id/ratingBar_Ulasan"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="RateMe"
                    android:visibility="visible"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/tv_ulasan_rating_given"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:text="4.5 / 10.0"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black_promo" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ulasan"
                    android:textSize="20sp"
                    android:textColor="@color/black_promo" />

                <EditText
                    android:id="@+id/et_ulasan_given"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="@dimen/spacing_medium"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/bg_fill_profile"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black_promo" />

                <Button
                    android:id="@+id/btn_ulasan_kirim"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:text="Kirim"
                    android:textAllCaps="false"
                    android:padding="2dp"
                    android:background="@drawable/bg_fill_category"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>