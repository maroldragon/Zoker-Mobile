<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.ProfileMemberActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_grey_700"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:background="@color/blue_grey_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="130dp">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/imgv_profil_member"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:layout_marginLeft="@dimen/spacing_large"
                            android:src="@drawable/ic_person"
                            app:civ_border_color="@color/black_promo"
                            app:civ_border_width="1dp"
                            app:civ_shadow_radius="10"
                            app:civ_shadow_color="#3f51b5"/>

                        <ImageView
                            android:id="@+id/imgv_profil_member_edit_photo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/spacing_mlarge"
                            android:src="@drawable/ic_edit_profil" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_profile_member_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:gravity="center"
                        android:text="User Name"/>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_profile_member_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:text="Indonesia"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_profile_member_sosial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:text="user_name"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_profile_member_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:src="@drawable/ic_keyboard_arrow_left"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/spacing_xlarge"
                android:layout_marginVertical="@dimen/spacing_large">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_fill_profile"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/grey_500"
                        android:text="Jenis Kelamin"/>
                    <TextView
                        android:id="@+id/tv_profile_member_jk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:background="@color/blue_grey_700"
                        android:text="Laki-laki"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_fill_profile"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/grey_500"
                        android:text="Tempat Lahir"/>
                    <TextView
                        android:id="@+id/tv_profile_member_ttl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:text="Gunung Sitoli"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_fill_profile"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/grey_500"
                        android:text="Tanggal Lahir"/>
                    <TextView
                        android:id="@+id/tv_profile_member_tgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:text="10 April 2021"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_fill_profile"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/grey_500"
                        android:text="Alamat"/>
                    <TextView
                        android:id="@+id/tv_profile_member_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:text="Jalan Merbabu"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_fill_profile"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/grey_500"
                        android:text="Kota"/>
                    <TextView
                        android:id="@+id/tv_profile_member_kota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:text="Nias"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_fill_profile"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/grey_500"
                        android:text="Provinsi"/>
                    <TextView
                        android:id="@+id/tv_profile_member_provinsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:text="Sumatera Utara"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_fill_profile"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/grey_500"
                        android:text="Negara"/>
                    <TextView
                        android:id="@+id/tv_profile_member_negara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:text="Indonesia"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_fill_profile"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/grey_500"
                        android:text="Email"/>
                    <TextView
                        android:id="@+id/tv_profile_member_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:text="Fajar@gmail.com"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_large"
                    android:background="@drawable/bg_fill_dark"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:text="Edit Profil"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>