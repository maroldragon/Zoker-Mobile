<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.DetailNotifActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/spacing_large"
                android:background="@color/overlay_dark_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_notif_detail_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_left"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Peminjaman"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black_promo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/spacing_xlarge"
                    android:paddingVertical="@dimen/spacing_small">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:text="Buku Berhasil Dipinjam"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_large"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Penulis"
                            android:textSize="17sp"
                            android:textColor="@color/black_promo" />
                        <TextView
                            android:id="@+id/tv_notif_detail_tanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":  15 Juni 2021"
                            android:textSize="17sp"
                            android:textColor="@color/black_promo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_notif_detail_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/teks_detail_notif"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo"
                        android:layout_marginBottom="30dp"/>

                    <ImageView
                        android:id="@+id/imgv_notif_detail"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_book_sampel" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_large"/>

                    <Button
                        android:id="@+id/btn_notif_detail_ulasan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:text="Berikan Ulasan"
                        android:background="@drawable/bg_fill_dark"
                        android:padding="12dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_gravity="center" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>