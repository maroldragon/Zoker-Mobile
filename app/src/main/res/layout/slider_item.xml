<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

    <ImageView
            android:id="@+id/imgv_gif_container"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|start"
            android:layout_margin="50dp" />

    <FrameLayout
            android:id="@+id/fl_shadow_container"
            android:background="@color/blue_grey_200"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_xlarge"
            android:paddingBottom="@dimen/spacing_small"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large">

            <ImageView
                android:id="@+id/imgv_auto_image_slider"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_mlarge"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="@dimen/spacing_mlarge" />

                <TextView
                    android:id="@+id/tv_author_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_mlarge"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/blue_grey_500"
                    android:textSize="15sp"
                    android:layout_marginLeft="@dimen/spacing_mlarge" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btn_pratinjau_slider"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:text="Pratinjau"
                    android:textAllCaps="false"
                    android:padding="2dp"
                    android:background="@drawable/bg_fill_category"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="@dimen/spacing_mlarge"
                    android:layout_marginLeft="@dimen/spacing_mlarge" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>