<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_large"
    android:layout_marginVertical="@dimen/spacing_medium"
    android:background="@drawable/bg_fill_category_big">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_status_notifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Status Notifikasi"/>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/tv_judul_notifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Item"/>

        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>

        <Button
            android:id="@+id/btn_notifikasi_lihat"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:text="Lihat"
            android:textAllCaps="false"
            android:paddingVertical="0dp"
            android:paddingHorizontal="40dp"
            android:background="@drawable/bg_fill_category"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>