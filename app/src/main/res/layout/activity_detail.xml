<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/overlay_dark_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_detail_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_left"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Buku"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black_promo" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgv_detail_book"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_book_sampel" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_large"/>

                <TextView
                    android:id="@+id/tv_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:textColor="@color/black_promo"
                    android:paddingHorizontal="@dimen/spacing_xlarge"
                    android:text="Harry Potter and the sorcener's stone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small"/>

                <TextView
                    android:id="@+id/tv_detail_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/spacing_xlarge"
                    android:text="J.K Rowling"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small"/>

                <TextView
                    android:id="@+id/tv_detail_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_star"
                    android:drawablePadding="5dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:paddingHorizontal="@dimen/spacing_xlarge"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:text="4.5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_large"
                android:paddingBottom="@dimen/spacing_xlarge"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi Buku"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black_promo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Penulis"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                    <TextView
                        android:id="@+id/tv_detail_author2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":  J.K Rowling"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Penerbit"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                    <TextView
                        android:id="@+id/tv_detail_penerbit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":  Bloomsbury (UK)"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                    <TextView
                        android:id="@+id/tv_detail_klasifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":  Fantasi"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Tahun Terbit"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                    <TextView
                        android:id="@+id/tv_detail_tahun_terbit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":  1998"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="ISBN"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                    <TextView
                        android:id="@+id/tv_detail_isbn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":  23423423523434"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Ringkasan"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                    <TextView
                        android:id="@+id/tv_detail_ringkasan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contoh_ringkasan"
                        android:textSize="17sp"
                        android:textColor="@color/black_promo" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_detail_pinjam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:text="Pinjam Buku"
                    android:background="@drawable/bg_fill_dark"
                    android:padding="12dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_large"/>

                <Button
                    android:id="@+id/btn_detail_ulasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berikan Ulasan"
                    android:background="@drawable/bg_fill_dark"
                    android:padding="12dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>